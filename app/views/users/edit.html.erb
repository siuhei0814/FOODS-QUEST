<h2>プロフィール編集</h2>

<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>

  <%= attachment_image_tag @user, :user_image, :fill, 60, 60, fallback: "no_image.jpg"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.attachment_field :user_image, placeholder: "プロフィール画像" %>

  <label for="inputMemo">Memo</label>
  <%= f.text_area :memo, autofocus: true, id:"inputMemo", placeholder:"メモ"%>

  <%= f.submit "変更を保存" %>
<% end %>