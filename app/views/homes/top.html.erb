
<h1 class="text-center", style="margin-top:50px;">FOODS QUEST！！</h1>

<p class="text-center">さっそく検索</p><br>

<div class="text-center">
  <%= form_tag(search_path, method: :get) do %>
    <div class="form-group">
    　<label for="content1">料理名</label><br>
      <%= text_field_tag 'content1' %>
      <%= select_tag 'method1', options_for_select({"完全一致" => "perfect", "部分一致" => "partial"}) %>
    </div>

    <div class="form-group">
      <label for="content2">場所</label><br>
      <%= text_field_tag 'content2' %>
      <%= select_tag 'method2', options_for_select({"完全一致" => "perfect", "部分一致" => "partial"}) %>
    </div>

    <%= submit_tag '検索', class: 'btn btn-success' %>
  <% end %>
</div>